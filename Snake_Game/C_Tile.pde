class Tile {
  //1. Instance Variables
  int x, y, s;
  color c;

  //2. Constructor(s)
  Tile(int _x, int _y) {
    x = _x;
    y = _y;
    s = TILESIZE;
  }

  //3. Behavior functions
  void show() {
    noStroke();
    fill(c);
    rect(x, y, s, s);
  }// -----------------------------------------------------------------------------------------
  
}// ---------------------------------------------------------------------------------------------------------------------------------------------------------------------
